        };

        five {
            bindings = <&kp PERCENT>;
            key-positions = <6 15>;
            layers = <0 4 3>;
            require-prior-idle-ms = <100>;
        };

        six {
            bindings = <&kp CARET>;
            key-positions = <6 7>;
            layers = <0 4 3>;
            require-prior-idle-ms = <100>;
        };

        seven {
            bindings = <&kp AMPERSAND>;
            key-positions = <8 7>;
            layers = <0 4 3>;
        };

        two {
            bindings = <&kp AT_SIGN>;
            key-positions = <1 2>;
            layers = <0 4 3>;
            require-prior-idle-ms = <100>;
        };

        three {
            bindings = <&kp HASH>;
            key-positions = <2 3>;
            layers = <0 4 3>;
            require-prior-idle-ms = <100>;
        };

        eight {
            bindings = <&kp ASTERISK>;
            key-positions = <8 9>;
            layers = <0 4 3>;
            require-prior-idle-ms = <100>;
        };

        wave {
            bindings = <&mt LCTRL TILDE>;
            key-positions = <10 11>;
            layers = <0 4 3>;
            require-prior-idle-ms = <100>;
        };

        Macro_brackets {
            bindings = <&kp RPAR>;
            key-positions = <15 16>;
            layers = <0 3>;
            timeout-ms = <350>;
        };

        TG {
            bindings = <&tog 3>;
            key-positions = <10 19 11 18>;
            layers = <0 3>;
        };

        gaming {
            bindings = <&tog 1>;
            key-positions = <20 31>;
            layers = <0 1>;
        };

        backtick {
            bindings = <&kp GRAVE>;
            key-positions = <20 10>;
            layers = <0 3>;
        };

        backslash {
            bindings = <&kp BACKSLASH>;
            key-positions = <31 30>;
            layers = <0 3>;
        };

        esc {
            bindings = <&kp ESC>;
            key-positions = <0 1>;
            layers = <0 3>;
        };

        semi {
            bindings = <&mt LCTRL SEMICOLON>;
            key-positions = <19 18>;
            layers = <0 3>;
        };

        L_bracket {
            bindings = <&kp LBKT>;
            key-positions = <4 3>;
            layers = <0 3>;
        };

        R_bracket {
            bindings = <&kp RBKT>;
            key-positions = <5 6>;
        };

        all {
            bindings = <&kp LC(A)>;
            key-positions = <10 34>;
        };
    };

    macros {
        Macro_Net1: net_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_ARROW &kp LEFT_ARROW &kp N0 &kp ENTER>;
            label = "NET_MACRO";
        };

        Macro_Net2: net_macro2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_ARROW &kp N0 &kp N0 &kp ENTER>;
            label = "NET_MACRO2";
        };

        Mecro_Log: Mecro_Log {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A) &kp D &kp L &kp D &kp M &kp D &kp D &kp L>;
            label = "MECRO_LOG";
        };

        Mecro_Refresh: Mecro_Refresh {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A) &kp LC(C) &kp LC(R)>;
            label = "MECRO_REFRESH";
        };

        Macro_brackets: Macro_brackets {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LPAR &kp RPAR &kp LEFT_ARROW>;
            label = "MACRO_BRACKETS";
        };

        Macro_bracket_r: Macro_bracket {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_BRACKET &kp RIGHT_BRACKET &kp LEFT_ARROW>;
            label = "MACRO_BRACKET";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        Totem {
            display-name = "ㅇ이응이ㅇ";
            bindings = <
                          &kp Q  &kp W         &over_E_ctl    &over_R_f4   &kp T               &kp Y            &kp U         &over_I_Up     &kp O          &kp P
                          &kp A  &over_S_save  &over_D_ctl    &over_F_ctl  &kp G               &kp H            &over_J_Left  &over_K_Down   &over_L_Right  &kp B
&MT_hold RIGHT_SHIFT TAB  &kp Z  &kp X         &kp C          &kp V        &kp B               &kp N            &kp M         &kp COMMA      &kp PERIOD     &lt 7 SLASH  &OSM_shift RIGHT_SHIFT
                                               &lt 5 LG(TAB)  &lt 6 SPACE  &LT_hold 4 ENTER    &lt 5 BACKSPACE  &kp SPACE     &kp LS(SPACE)
            >;
        };

        Gaming {
            bindings = <
              &kp TAB    &kp Q  &kp W     &kp E      &kp R          &kp Y     &kp U           &kp UP_ARROW    &kp O            &kp P
              &kp LSHFT  &kp A  &kp S     &kp D      &kp F          &kp H     &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &kp SEMI
&lt 0 ESCAPE  &kp LCTRL  &kp Z  &kp X     &kp C      &kp V          &kp N     &kp M           &kp COMMA       &kp DOT          &kp FSLH  &kp ENTER
                                &kp LALT  &kp SPACE  &lt 8 ENTER    &kp BSPC  &lt 0 SPACE     &kp LS(SPACE)
            >;

            label = "ISAAC'-'";
        };

        Test {
            bindings = <
           &kp Q  &kp W  &kp E    &kp R      &kp T      &kp Y     &kp U      &kp I          &kp O    &kp P
           &kp A  &kp S  &kp D    &kp F      &kp G      &kp H     &kp J      &kp K          &kp L    &kp B
&kp LSHFT  &kp Z  &kp X  &kp C    &kp V      &kp B      &kp N     &kp M      &kp COMMA      &kp DOT  &kp FSLH  &kp RSHFT
                         &kp TAB  &kp SPACE  &kp RET    &kp BSPC  &kp SPACE  &kp LS(SPACE)
            >;
        };

        Colemak {
            bindings = <
           &kp Q  &kp W  &kp F      &kp P        &kp B          &kp J            &kp L      &kp U          &kp Y    &kp SEMI
           &kp A  &kp R  &kp S      &kp T        &kp G          &kp M            &kp N      &kp E          &kp I    &kp O
&kp LSHFT  &kp Z  &kp X  &kp C      &kp D        &kp V          &kp K            &kp H      &kp COMMA      &kp DOT  &kp FSLH  &kp RSHFT
                         &lt 8 TAB  &lt 0 SPACE  &lt 4 ENTER    &lt 6 BACKSPACE  &kp SPACE  &kp LS(SPACE)
            >;

            label = "Colemak";
        };

        Numpad {
            display-name = "Numpad";
            bindings = <
           &kp I      &kp LC(W)       &kp UP_ARROW    &ht_refresh 0 LC(R)  &hm LS(LC(T)) LC(T)    &kp N7         &kp N8        &kp N9        &kp MINUS  &kp UNDERSCORE
           &kp LC(A)  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW      &kp LC(G)              &kp NUMBER_4   &kp N5        &kp NUMBER_6  &kp PLUS   &kp COLON
&kp LC(Y)  &kp LC(Z)  &kp LC(X)       &kp LC(C)       &kp LC(V)            &kp C_AC_HOME          &kp NUMBER_1   &kp NUMBER_2  &kp NUMBER_3  &kp COMMA  &kp SLASH       &kp EQUAL
                                      &Mecro_Log      &td_Macro_Net        &trans                 &kp BACKSPACE  &kp N0        &kp PERIOD
            >;
        };

        Funtion {
            display-name = "Funtion";
            bindings = <
                 &kp F1  &kp F2   &kp F3   &kp F4             &kp LBKT                &kp RBKT               &kp C_VOLUME_DOWN  &kp UP_ARROW     &kp C_VOLUME_UP    &kp PAGE_UP
                 &kp F5  &kp F6   &kp F7   &kp F8             &kp LEFT_PARENTHESIS    &kp RIGHT_PARENTHESIS  &kp LEFT_ARROW     &kp DOWN_ARROW   &kp RIGHT_ARROW    &kp PAGE_DOWN
&kp LC(LS(ESC))  &kp F9  &kp F10  &kp F11  &kp F12            &kp LEFT_BRACE          &kp RIGHT_BRACE        &kp LC(LG(LEFT))   &kp LG(D)        &kp LC(LG(RIGHT))  &kp QUESTION   &kp SQT
                                  &trans   &kp LS(LA(LC(F)))  &kp LS(LA(LC(A)))       &trans                 &kp LEFT_ARROW     &kp RIGHT_ARROW
            >;
        };

        Shortcut {
            display-name = "Short";
            bindings = <
                    &kp LG(NUMBER_1)  &kp LG(NUMBER_2)  &kp LG(NUMBER_3)   &kp LG(NUMBER_4)  &kp LG(N5)         &kp LG(NUMBER_6)       &kp LG(N7)     &kp LG(N8)     &kp LG(N9)     &kp LG(N0)
                    &kp LA(LC(A))     &kp LA(LC(S))     &kp LA(LC(D))      &kp LA(LC(F))     &td_mail           &kp LA(LC(H))          &kp LA(LC(J))  &kp LA(LC(K))  &kp LA(LC(L))  &trans
&kp LC(LS(ESCAPE))  &kp Z             &kp LA(LC(X))     &kp LA(LC(C))      &kp LA(LC(V))     &kp LA(LC(B))      &kp LA(LC(SEMICOLON))  &trans         &trans         &trans         &kp C_SLEEP  &kp C_SLEEP_MODE
                                                        &kp C_VOLUME_DOWN  &trans            &kp C_VOLUME_UP    &kp C_AL_CALCULATOR    &kp LG(A)      &kp LG(N)
            >;
        };

        Mouse {
            bindings = <
         &trans  &trans  &trans   &trans  &trans     &trans     &kp LC(LG(LEFT))  &trans          &kp LG(LC(RIGHT))  &trans
         &trans  &trans  &trans   &trans  &trans     &mkp MB5   &mmv MOVE_Y(100)  &mmv MOVE_UP    &mmv MOVE_Y(-100)  &trans
&kp F22  &trans  &trans  &trans   &trans  &trans     &mkp MB4   &mmv MOVE_LEFT    &mmv MOVE_DOWN  &mmv MOVE_RIGHT    &trans  &trans
                         &kp F23  &trans  &kp F24    &mkp LCLK  &mkp MCLK         &mkp RCLK
            >;

            label = "한Eng^^";
        };

        Gameadd {
            bindings = <
        &trans  &kp N1  &kp N2  &kp N3  &kp T     &trans  &trans  &kp I   &trans  &trans
        &trans  &kp N4  &kp N5  &kp N6  &kp G     &trans  &kp J   &kp K   &kp L   &trans
&trans  &trans  &kp N7  &kp N8  &kp N9  &kp B     &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &kp N0  &trans    &trans  &trans  &trans
            >;

            label = "Dexter";
        };
    };
};
