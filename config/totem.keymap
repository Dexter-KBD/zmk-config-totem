        };

        win {
            bindings = <&kp LEFT_WIN>;
            key-positions = <21 22>;
            layers = <0 3>;
        };

        middle_click {
            bindings = <&mkp MCLK>;
            key-positions = <22 23>;
            timeout-ms = <350>;
            layers = <0 3>;
        };

        right_click {
            bindings = <&mkp RCLK>;
            key-positions = <23 24>;
